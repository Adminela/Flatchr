<?xml version="1.0" encoding="utf-8"?>
<templates>
    <tr t-extend="CalendarView.quick_create">
        <t t-jquery=".form-group" t-operation="replace">
            <div class="form-group">
                <label for='name' class='col-form-label o_form_label'>Summary:</label>
                <input type='text' name='name' class="o_input o_required_modifier" t-att-value="widget.dataTemplate.name or None"/>
            </div>
            <div class="form-group">
                <label for='name' class='col-form-label o_form_label'>Responsable:</label>
                <input type='text' name='user_id' class="o_input o_required_modifier"/>
            </div>
        </t>
    </tr>
</templates>
